@model SisalrilProject.Models.Asignacione

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Asignaciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAsignacion" />
            <div class="form-group">
                <label asp-for="IdEdificio" class="control-label"></label>
                <select asp-for="IdEdificio" class="form-control" asp-items="ViewBag.IdEdificio"></select>
                <span asp-validation-for="IdEdificio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTrabajador" class="control-label"></label>
                <select asp-for="IdTrabajador" class="form-control" asp-items="ViewBag.IdTrabajador"></select>
                <span asp-validation-for="IdTrabajador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AsignacionFechaInicio" class="control-label"></label>
                <input asp-for="AsignacionFechaInicio" class="form-control" />
                <span asp-validation-for="AsignacionFechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AsignacionNoDias" class="control-label"></label>
                <input asp-for="AsignacionNoDias" class="form-control" />
                <span asp-validation-for="AsignacionNoDias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
